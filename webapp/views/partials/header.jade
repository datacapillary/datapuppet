.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Data Puppet
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li
          .form.navbar-form(role="search")
            .input-group
               input.form-control#nav-search(type="text", placeholder="Search Host", name="nav-search")
               .input-group-btn
                 button.btn.btn-default(type="submit")
                   i.fa.fa-search
      ul.nav.navbar-nav.navbar-right
        li(class=(title == 'Report') ? 'active' : undefined)
          a(href='/report') Report
        if !user
          li(class=(title == 'Login') ? 'active' : undefined)
            a(href='/login') Log In
          li(class=(title == 'Sign On') ? 'active' : undefined)
            a(href='/signup') Sign Up
        else
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src='#{user.profile.picture}')
              else
                img(src='#{user.gravatar(60)}')
              | #{user.profile.name || user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') My Account
              li.divider
              li
                a(href='/logout') Logout
