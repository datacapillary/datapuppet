extends layout

block content
  .page-header
    h3 Need Help? Report Here

  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='Title') Title
      .col-sm-8
        input.form-control(type='text', name='Title', id='Title', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='message') Body
      .col-sm-8
        textarea.form-control(name='message', id='message', rows='7')
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit') Submit
